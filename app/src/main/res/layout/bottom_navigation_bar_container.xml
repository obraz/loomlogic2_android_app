<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation_bar_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_bar_height"
    android:layout_gravity="bottom"
    android:background="@color/main_bg_color">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFE2E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_navigation_notifications" />

        <ImageView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_navigation_search" />

        <ImageView
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_navigation_leads" />

        <ImageView
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_navigation_tasks" />

        <ImageView
            android:id="@+id/tab5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_navigation_profile" />
    </LinearLayout>
</FrameLayout>