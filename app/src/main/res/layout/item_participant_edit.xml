<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

    <com.loomlogic.leads.details.view.LeadParticipantAvatarView
        android:id="@+id/leadParticipantAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="6dp" />

    <TextView
        android:id="@+id/tv_leadParticipantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view_leadParticipantRemove"
        android:layout_toRightOf="@+id/leadParticipantAvatar"
        android:textColor="#798591"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/view_leadParticipantRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackground"
        android:padding="15dp"
        android:src="@drawable/ic_participant_delete"
        android:visibility="gone" />

    <View
        style="@style/MainEditTextDivider"
        android:layout_alignParentBottom="true" />
</RelativeLayout>