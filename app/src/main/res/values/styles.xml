<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignInTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppLighterTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryLightDark</item>
        <item name="colorAccent">@color/colorPrimaryLightDark</item>
    </style>

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_transparent_50</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CreateLeadEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/lead_create_new_black_text_color</item>
        <item name="android:textColorHint">@color/lead_create_new_grey_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CreateLeadDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D0D9E1</item>
    </style>

    <style name="LeadsFilterDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EBEEF2</item>
    </style>

    <style name="LeadsFilterRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#2B2E30</item>
        <item name="android:textSize">17sp</item>
        <item name="android:button">@drawable/radio_btn</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:actionMenuTextColor">@color/white</item>
        <!--<item name="actionOverflowMenuStyle">@style/OverflowMenu</item>-->
        <!--<item name="popupTheme">@style/PopupCustomBg</item>-->
    </style>

    <!--<style name="PopupCustomBg" parent="android:ThemeOverlay">-->
        <!--<item name="android:background">@drawable/bg_lead_filter</item>-->
    <!--</style>-->

    <!--<style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">-->
        <!--<item name="android:overlapAnchor">false</item>-->
    <!--</style>-->
</resources>
