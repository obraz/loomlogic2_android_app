<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loomlogic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.LoomLogicApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".signin.SignInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SignInTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".signin.ForgotPasswordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SignInTheme"
            android:windowSoftInputMode="adjustResize"></activity>

        <activity
            android:name=".signin.signup.SignUpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SignInTheme"
            android:windowSoftInputMode="adjustResize"></activity>

        <activity
            android:name=".home.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".leads.create.CreateLeadActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"></activity>

        <activity
            android:name=".leads.create.SourceListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".leads.create.StateListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".leads.base.LeadsFilterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppLighterTheme"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>